[gerrit]
  basePath = git


[database]
  type = postgresql
  hostname = postgres
  database = reviewdb
  username = {{ gerrit_postgres_user }}

[index]
  type = LUCENE

[auth]
  type = OAUTH
  gitBasicAuth = true
	gitBasicAuthPolicy = HTTP

[oauth]

[sendemail]
  smtpServer = localhost

[sshd]
  listenAddress = *:29418

[httpd]
  listenUrl = http://*:8080/

[cache]
  directory = cache

[container]
  user = root

[plugins]
  allowRemoteAdmin = true

[plugin "gerrit-oauth-provider-google-oauth"]
  link-to-existing-openid-accounts = true
