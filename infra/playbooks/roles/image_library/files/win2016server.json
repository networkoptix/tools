{
  "builders": [
    {
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "kvm",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "qemuargs": [["-m", "8192"], ["-smp", "cpus=10"]],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "floppy_files": ["drivers/amd64/Win2016/*", "floppy/*"],

      "vm_name": "{{ user `vm_name`}}",
      "headless": true,
      "disk_size": 40960,
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `winrm_or_ssh_or_none`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_command": "{{user `shutdown_command`}}"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpus`}}",
        "scsi0.virtualDev": "lsisas1068"
      },

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "floppy_files": ["./floppy/*"],

      "vm_name": "{{ user `vm_name`}}",
      "headless": true,
      "disk_size": 40960,
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `winrm_or_ssh_or_none`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_command": "{{user `shutdown_command`}}"
    },

    {
      "type": "virtualbox-iso",
      "guest_os_type": "Windows2016_64",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ],
      "guest_additions_mode":
        "{{user `vbox_guest_additions_upload_or_attach_or_disable`}}",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "floppy_files": ["./floppy/*"],

      "vm_name": "{{ user `vm_name`}}",
      "headless": true,
      "disk_size": 40960,
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `winrm_or_ssh_or_none`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_command": "{{user `shutdown_command`}}"
    },
    {
      "type": "parallels-iso",
      "guest_os_type": "win-2016",
      "parallels_tools_flavor": "win",

      "prlctl": [
        ["set", "{{.Name}}", "--memsize", "{{user `memory`}}"],
        ["set", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["set", "{{.Name}}", "--winsystray-in-macmenu", "off"],
        ["set", "{{.Name}}", "--startup-view", "window"],
        ["set", "{{.Name}}", "--efi-boot", "off"]
      ],

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "floppy_files": ["./floppy/*"],

      "vm_name": "{{ user `vm_name`}}",
      "headless": true,
      "disk_size": 40960,
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `winrm_or_ssh_or_none`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",

      "shutdown_command": "{{user `shutdown_command`}}"
    }
  ],
  "provisioners": [],
  "post-processors": [],
  "variables": {
    "vm_name": "baseimage",
    "iso_url":
      "http://care.dlservice.microsoft.com/dl/download/1/4/9/149D5452-9B29-4274-B6B3-5361DBDA30BC/14393.0.161119-1705.RS1_REFRESH_SERVER_EVAL_X64FRE_EN-US.ISO",
    "iso_checksum_type": "md5",
    "iso_checksum": "70721288bbcdfe3239d8f8c0fae55f1f",
    "vbox_guest_additions_upload_or_attach_or_disable": "upload",
    "cpus": "3",
    "memory": "4096",
    "boot_wait": "20s",
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
    "_note": "winrm connector is not recommended because it hangs sometimes..",
    "winrm_or_ssh_or_none": "winrm",
    "ssh_username": "jenkins",
    "ssh_password": "password",
    "ssh_wait_timeout": "6h",
    "winrm_username": "jenkins",
    "winrm_password": "password",
    "winrm_timeout": "10000s"
  }
}
