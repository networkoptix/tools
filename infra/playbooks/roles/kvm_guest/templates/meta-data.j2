instance-id: {{ inventory_hostname }}
hostname: "{{ inventory_hostname }}"
local-hostname: "{{ inventory_hostname }}"

network-interfaces: |
  auto lo
  iface lo inet loopback

{% for iface in interfaces %}
  auto {{ iface.name }}
  iface {{ iface.name }} inet {{ iface.type }}
{% if "options" in iface %}
{% for prop, value in iface.options.iteritems() %}
    {{ prop }} {{ value }}
{% endfor %}
{% endif %}

{% endfor %}
