# -*- sh -*-

set -o errexit +o nounset -o noclobber
ARGS="$TASKBOT_OPTIONS $TASKBOT_CONFIG"

# + Prepare environment
FUNTESTS_DIR="$TASKBOT_VAR"/var/functest
if [ -f $FUNTESTS_DIR/wd/vagrant/Vagrantfile ]; then
  for path in $(find $FUNTESTS_DIR/wd/vagrant/.vagrant/machines -path '*/virtualbox/id'); do
      echo "$path $(cat $path)"
  done
  cd $FUNTESTS_DIR/wd/vagrant
  vagrant destroy -f
fi
[ -d $FUNTESTS_DIR/wd ] && rm -rf $FUNTESTS_DIR/wd
[ -d $FUNTESTS_DIR/result ] && rm -rf $FUNTESTS_DIR/result
mkdir -p $FUNTESTS_DIR/wd $FUNTESTS_DIR/bin $FUNTESTS_DIR/result

# + Prepare box files
cd $FUNTESTS_DIR
rsync -avz --delete --partial -t rsync://noptix.enk.me/buildenv/test/ $FUNTESTS_DIR/bin/
TASK_ID=$(cat "$TASKBOT_VAR"/var/slow.task)
DEB_FILE_PATH=$(find "$TASKBOT_VAR"/var/artefacts/$TASK_ID -type f -name '*.deb' | head -1)
echo $DEB_FILE_PATH
cp $DEB_FILE_PATH "$FUNTESTS_DIR"/bin/mediaserver.deb

if [ -z $TASKBOT_CAMERA_ADDRESS ]; then
   echo "Camera address isn't defined!" >> /dev/stderr && exit 1
fi

if [ -z $TASKBOT_VM_BASE_PORT ]; then
   echo "VM base port isn't defined!" >> /dev/stderr && exit 1
fi

VM_NAME_PREFIX=$(echo $TASKBOT_BRANCHNAME | sed -r 's/\./_/g')

# + Run tests
set +o errexit
CMD=$(cat << EOF
py.test -v \
  "$TASKBOT_VAR"/nx_vms/func_tests \
  --work-dir="$FUNTESTS_DIR"/wd \
  --bin-dir="$FUNTESTS_DIR"/bin \
  --html="$FUNTESTS_DIR"/result/functest.html \
  --self-contained-html \
  --vm-name-prefix=$VM_NAME_PREFIX \
  --vm-address=$TASKBOT_CAMERA_ADDRESS \
  --vm-port-base=$TASKBOT_VM_BASE_PORT \
  --cache-clear $TASKBOT_PYTEST_OPTIONS
EOF
)
eval $CMD
set -o errexit

# + Store results
$TASKBOT_BIN/file.py \
     $TASKBOT_CONFIG \
    --path "$FUNTESTS_DIR"/result \
    --mask '*.html'

# + Clear test data
if [ -f $FUNTESTS_DIR/wd/vagrant/Vagrantfile ]; then
  for path in $(find $FUNTESTS_DIR/wd/vagrant/.vagrant/machines -path '*/virtualbox/id'); do
      echo "$path $(cat $path)"
  done
  cd $FUNTESTS_DIR/wd/vagrant
  vagrant destroy -f
fi
[ -d $FUNTESTS_DIR/wd ] && rm -rf $FUNTESTS_DIR/wd
