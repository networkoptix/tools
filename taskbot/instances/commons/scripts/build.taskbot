# -*- sh -*-

set -o errexit +o nounset -o noclobber

cd "$TASKBOT_VAR"/nx_vms

# + Incremantal build
mvn package -e -T2 -Dbuild.configuration=release -Dutb 2>&1
RC=$?
echo $RC

# + Build from stratch
if [ $RC -eq 0 ]; then
  mvn clean -Dutb
  hg purge .
  mvn package -e -T2 -Dbuild.configuration=release -Dutb 2>&1
fi
